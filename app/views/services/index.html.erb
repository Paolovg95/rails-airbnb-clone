<div class="page-wrapper">
  <div class="text-center">
    <h2>Here are all the <strong>Services</strong> you are sharing!</h2>
  </div>


    <div class="container mt-5">
      <div class="row cards mt-5">
        <% @services.each do |service| %>
          <div class="col-sm-6 pb-3">
            <div class="card align-items-center">
              <% if service.user.photo.attached? %>
                <%= image_tag service.user.photo, width: 200, height: 200, id: "profile-pic-post" %>
              <% else %>
                <%= image_tag current_user.photo, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
              <% end %>
              <%= image_tag current_user.photo, width: 200, height: 200, id: "profile-pic-post" %>
              <div class="card-body py-4">
                <h5 class="pb-3"><%= service.service_title %></h5>
                <div class="flex ">
                  <div class="flex text-left pb-3">
                    <i class="fas fa-location-arrow"></i><span> <%= service.location %></span>
                  </div>
                  <div class="flex text-left">
                    <i class="fas fa-dollar-sign"></i><span><%= service.price_rate %>/hour</span>
                  </div>
                </div>
                <button type="button" class="btn btn-primary">
                  <%= link_to "Edit this service", edit_service_path(service), class: "dark-font-link" %>
                </button>
                <button type="button" class="btn btn-danger">
                  <%= link_to "Delete this service", service_path(service),
                  method: :delete,
                  data: { confirm: "Are you sure?" },
                  class: 'ml-3 text-danger' %>
                </button>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
</div>
