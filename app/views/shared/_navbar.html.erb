        <li class="nav-item dropdown">
          <%= image_tag "https://res.cloudinary.com/dnczymjwi/image/upload/v1635256983/airbnb-clone/green-guy-icon_z30qdn.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "Bookings", "#", class: "dropdown-item" %>
