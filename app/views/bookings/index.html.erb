<div class="page-wrapper">
  <div class="text-center">
    <h2>Here are all your <strong>Bookings</strong>!</h2>
  </div>


    <div class="container mt-5">
      <div class="row cards mt-5">
        <% @bookings.each do |booking| %>
          <div class="col-sm-6 pb-3">
            <div class="card align-items-center">
              <% if booking.service.user.photo.attached? %>
                <%= image_tag booking.service.user.photo, width: 200, height: 200, id: "profile-pic-post" %>
              <% else %>
                <%= cl_image_tag "https://res.cloudinary.com/dnczymjwi/image/upload/v1635257040/airbnb-clone/1.png", width: 100, height: 100 %>
              <% end %>
              <div class="card-body py-4">
                <h5 class="pb-3"><%= booking.service.user.first_name %> <%= booking.service.user.last_name %></h5>
                <h5 class="pb-3">Booking ID:<%= booking.id %></h5>
                <h5 class="pb-3">Status: <%= booking.status %></h5>
                <div class="flex ">
                  <div class="flex text-left pb-3">
                    <span> Start Date: <%= booking.start_date %></span>
                  </div>
                  <div class="flex text-left">
                    <span> End Date: <%= booking.end_date %></span>
                  </div>
                </div>
                <button type="button" class="btn btn-primary mt-2">
                  <%= link_to "Edit this Booking", edit_booking_path(booking), class: "dark-font-link" %>
                </button>
                  <i class="fas fa-trash ml-3">
                    <%= link_to "Delete this service", booking_path(booking),
                    method: :delete,
                    data: { confirm: "Are you sure?" } %>
                  </i>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
</div>
